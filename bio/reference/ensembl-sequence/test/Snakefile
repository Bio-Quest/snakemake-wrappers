rule get_genome:
    output:
        # use either .fasta.gz for a compressed reference or
        # just .fasta for on the fly decompression
        "refs/genome.fasta.gz"
    params:
        species="saccharomyces_cerevisiae",
        datatype="dna",
        build="R64-1-1",
        release="98"
    log:
        "logs/get_genome.log"
    cache: True  # save space and time with between workflow caching (see docs)
    wrapper:
        "master/bio/reference/ensembl-sequence"

rule get_chromosome:
    output:
        # use either .fasta.gz for a compressed reference or
        # just .fasta for on the fly decompression
        "refs/chr1.fasta"
    params:
        species="saccharomyces_cerevisiae",
        datatype="dna",
        build="R64-1-1",
        release="101",
        chromosome="I"
    log:
        "logs/get_genome.log"
    cache: True  # save space and time with between workflow caching (see docs)
    wrapper:
        "master/bio/reference/ensembl-sequence"
